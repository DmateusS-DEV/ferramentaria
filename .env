# Configurações de conexão com o banco MySQL

# Onde o banco está rodando
# - Desenvolvimento: normalmente "localhost"
# - Produção: endereço do servidor ou serviço de banco (ex: AWS RDS, Google Cloud)
DB_HOST=localhost

# Usuário do banco
# ⚠️ Evite usar "root" em produção, crie um usuário específico só para o app
DB_USER=appuser

# Senha do banco
DB_PASS=12345

# Nome do banco de dados
DB_NAME=Ferramentaria
